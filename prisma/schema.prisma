generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  firstName String
  lastName  String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  itmes     Item[]
  orders    Order[]
  produtcs  Product[]
}

model Contact {
  id        String   @id @default(uuid())
  Name      String
  email     String
  phone_no  String
  subject   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id           String   @id @default(uuid())
  category     String
  name         String
  seller       String
  price        Int
  rating       Int?
  rating_count Int?
  stock        Int?
  image        String
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Order {
  id         String   @id @default(uuid())
  amount     Int
  username   String?
  email      String?
  itemName   String?
  orderId    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  image      String?
  productIds String[]
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Resister {
  id        String   @id @default(uuid())
  username  String
  email     String
  phone_no  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id        String   @id @default(uuid())
  fullName  String
  email     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id        String   @id @default(uuid())
  productId String
  quantity  Int
  coupon    String?
  color     String
  size      String
  userId    String
  name      String?
  img       String?
  price     String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
